@model IEnumerable<OpenSlotModel>

@foreach (var item in Model)
{
    <div class="location-slots__title-wrap">
        <h4>@item.Name</h4>
    </div>
    <div class="table-responsive">
        <table class="table table-striped table-bordered border-muted">
            <tbody>
                @foreach (var date in item.Dates)
                {
                    if (!date.Dt.HasValue)
                    {
                        continue;
                    }

                    <tr data-date="@(date.Dt.Value.ToString("yyyy'-'MM'-'dd"))">
                        <td>
                            @date.WeekName&nbsp;
                            <br />
                            @date.Dt.Value.ToString("dd-MM-yyyy")
                        </td>
                        <td>
                            <div class="location-slots__slots">
                                @foreach (var slot in date.Slots)
                                {
                                    <a class="location-slots__slot-single">@slot.Value</a>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
